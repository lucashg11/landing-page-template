---
import { Icon } from "astro-icon/components";

const quickLinks = [
    { name: "Home", href: "#home" },
    { name: "About", href: "#about" },
    { name: "Team", href: "#team" },
    { name: "Contact", href: "#contact" },
];

const services = [
    { name: "Web Design", href: "#web-design" },
    { name: "SEO Optimization", href: "#seo-optimization" },
    { name: "Development", href: "#development" },
    { name: "Consulting", href: "#consulting" },
];

const socialLinks = [
    { icon: "mdi:twitter", href: "https://twitter.com", ariaLabel: "Twitter" },
    { icon: "mdi:linkedin", href: "https://linkedin.com", ariaLabel: "LinkedIn" },
    { icon: "mdi:github", href: "https://github.com", ariaLabel: "GitHub" },
];
---

<footer class="w-full bg-(--color-dark) text-white py-12 px-4">
    <div class="w-full max-w-6xl mx-auto">
        <div class="grid md:grid-cols-4 gap-8 mb-8">
            <!-- Company Info -->
            <div class="space-y-4">
                <div class="flex items-center gap-2">
                    <Icon name="mdi:dev-to" size={32} color="white" />
                    <span class="text-xl font-bold">Astro Landing</span>
                </div>
                <p class="text-white/60 text-sm">
                    Professional landing page templates built with modern web
                    technologies for optimal performance and user experience.
                </p>
            </div>

            <!-- Quick Links -->
            <div>
                <h3 class="font-semibold mb-4">Quick Links</h3>
                <ul class="space-y-2 text-white/60 text-sm">
                    {
                        quickLinks.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="hover:text-white transition-colors duration-300"
                                >
                                    {link.name}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Services -->
            <div>
                <h3 class="font-semibold mb-4">Services</h3>
                <ul class="space-y-2 text-white/60 text-sm">
                    {
                        services.map((service) => (
                            <li>
                                <a
                                    href={service.href}
                                    class="hover:text-white transition-colors duration-300"
                                >
                                    {service.name}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Social Links -->
            <div>
                <h3 class="font-semibold mb-4">Connect With Us</h3>
                <div class="flex gap-3 mb-4">
                    {
                        socialLinks.map((social) => (
                            <a
                                href={social.href}
                                aria-label={social.ariaLabel}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-white/20 transition-colors duration-300"
                            >
                                <Icon size={20} color="white" name={social.icon} />
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div
            class="border-t border-white/20 pt-8 flex flex-col md:flex-row justify-between items-center gap-4"
        >
            <p class="text-white/60 text-sm">
                Â© 2026 Astro Landing Template. All rights reserved.
            </p>
            <div class="flex gap-6 text-white/60 text-sm">
                <a
                    href="#privacy-policy"
                    class="hover:text-white transition-colors duration-300"
                    >Privacy Policy</a
                >
                <a
                    href="#terms-of-service"
                    class="hover:text-white transition-colors duration-300"
                    >Terms of Service</a
                >
            </div>
        </div>
    </div>
</footer>
