---
import { Icon } from "astro-icon/components";

// Define reusable certificates data
const certificates = [
    {
        icon: "mdi:file-certificate-outline",
        title: "Frontend Development",
    },
    {
        icon: "mdi:file-certificate-outline",
        title: "Backend Development",
    },
    {
        icon: "mdi:file-certificate-outline",
        title: "UI/UX Design",
    },
    {
        icon: "mdi:file-certificate-outline",
        title: "Full Stack Engeneering",
    },
];
---

<article
    class="w-full px-4 py-24 bg-gray-50 md:px-12 lg:flex lg:items-center lg:justify-center"
>
    <div
        class="w-full flex flex-col items-center justify-center gap-16 md:max-w-2xl"
    >
        <section class="w-full text-center">
            <h2 class="text-3xl text-[#00808D] font-bold mb-2">
                Meet Our Team
            </h2>
            <p class="text-[#1a1a1a]/60">
                Get to know the talented professionals behind our success
            </p>
        </section>
        <section
            class="w-full flex flex-col items-center gap-6 border border-[#1a1a1a]/30 rounded-xl relative text-center px-8 py-16"
        >
            <Icon
                class={"absolute -top-12 right-0 left-0 mx-auto"}
                color={"#4D1780"}
                size={100}
                name="mdi:person-circle"
            />

            <h3 class="text-2xl text-[#4D1780] font-bold">Lucas Gomez</h3>
            <span
                class="bg-[#00808D]/30 text-[#00808D] px-5 py-2.5 rounded-full md:max-w-2xs text-center"
                >Senior Web Developer</span
            >
            <p class="text-[#1a1a1a]/60 max-w-2xl mx-auto">
                Passionate web developer with expertise in modern JavaScript
                frameworks and a keen eye for user experience. Committed to
                delivering high-quality, scalable solutions that drive business
                growth.
            </p>
            <div
                class="w-full flex flex-wrap items-center justify-center gap-4"
            >
                {
                    certificates.map((cert) => (
                        <div class="w-full md:hover:shadow-xl px-5 py-4 rounded-xl border border-[#1a1a1a]/30 flex items-center  gap-2 transition-shadow duration-300">
                            <Icon
                                size={36}
                                color={"#4D1780"}
                                name={cert.icon}
                            />
                            <p class="text-lg text-[#1a1a1a]/60 font-medium">
                                {cert.title}
                            </p>
                        </div>
                    ))
                }
            </div>
            <div class="w-full flex items-center justify-center gap-4">
                <a
                    href="https://linkedin.com/in/lucasgomez"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-2 border border-[#1a1a1a]/30 px-4 py-2 rounded-2xl group hover:bg-[#0072B1] hover:border-[#0072B1] duration-300"
                >
                    <Icon
                        class="group-hover:text-white"
                        size={22}
                        color={"#0072B1"}
                        name="mdi:linkedin"
                    />
                    <span class="text-[#1a1a1a] group-hover:text-white"
                        >LinkedIn</span
                    >
                </a>
                <a
                    href="https://wa.me/1234567890"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-2 border border-[#1a1a1a]/30 px-4 py-2 rounded-2xl group hover:bg-[#25D366] hover:border-[#25D366] duration-300"
                >
                    <Icon
                        class="group-hover:text-white"
                        size={22}
                        color={"#25D366"}
                        name="mdi:whatsapp"
                    />
                    <span class="text-[#1a1a1a] group-hover:text-white"
                        >WhatsApp</span
                    >
                </a>
            </div>
        </section>
    </div>
</article>
