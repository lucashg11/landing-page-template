---
import { Icon } from "astro-icon/components";
// Define reusable service card data
const services = [
    {
        icon: "mdi:sticker-check",
        title: "Web Design",
        description: "Custom, responsive designs",
    },
    {
        icon: "mdi:scale-balance",
        title: "SEO Oriented",
        description: "Improve search engine for visibility",
    },
    {
        icon: "mdi:check-circle",
        title: "Quality Check",
        description: "Thorough testing to ensure performance",
    },
    {
        icon: "mdi:shield",
        title: "Security First",
        description: "Robust security data protection",
    },
];
---

<section
    class="w-full bg-linear-to-b from-(--color-primary) to-(--color-dark) pt-32 pb-12 px-4 polygon flex items-center justify-center lg:h-[93dvh] lg:px-8"
>
    <div
        class="w-full max-w-7xl mx-auto flex flex-col items-center justify-center gap-12 lg:flex-row lg:justify-between"
    >
        <div class="w-full max-w-2xl text-center lg:text-left lg:flex-1">
            <h1 class="reveal text-5xl font-bold text-white mb-6 lg:text-7xl">
                Astro Landing Template
            </h1>
            <p class="reveal text-white/60 text-lg mb-8 max-w-xl mx-auto lg:mx-0">
                Landing page example made in Astro and Tailwind CSS
            </p>
            <button
                class="reveal bg-(--color-secondary) px-8 py-3 rounded-xl text-white font-semibold transform md:hover:scale-110 transition-all duration-300"
                >Learn More</button
            >
        </div>
        <div
            class="reveal w-full grid grid-cols-2 gap-4 max-w-lg lg:max-w-xl lg:flex-1"
        >
            {
                services.map((service) => (
                    <div class="flex flex-col items-start justify-center border-2 border-white/30 rounded-xl p-6 bg-(--color-secondary)/30 gap-3 hover:bg-(--color-secondary)/50 transition-colors duration-300">
                        <div class="flex items-start gap-3">
                            <Icon size={32} name={service.icon} color="white" />
                            <h3 class="text-white text-lg font-semibold">{service.title}</h3>
                        </div>
                        <p class="text-white/70 text-sm leading-relaxed">
                            {service.description}
                        </p>
                    </div>
                ))
            }
        </div>
        <div
            id="scroll-indicator"
            class="flex items-center flex-col gap-2 animate-bounce duration-300 md:opacity-0 md:invisible"
        >
            <Icon size={24} name="mdi:cellphone-arrow-down" color={"white"} />
            <Icon size={16} name="mdi:triangle-down" color={"white"} />
        </div>
    </div>
</section>

<script>
    const scrollIndicator = document.getElementById("scroll-indicator");
    if (scrollIndicator) {
        window.addEventListener("scroll", () => {
            if (window.scrollY > 200) {
                scrollIndicator.classList.add("opacity-0");
            } else {
                scrollIndicator.classList.remove("opacity-0");
            }
        });
    }
</script>
